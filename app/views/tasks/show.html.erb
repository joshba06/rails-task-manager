
<div class="container">

  <div class="row m-4">
    <div class="col p-3">
      <h1><%=@task.title%></h1>
    </div>
    <div class="col p-3">
      <button type="button" class="btn btn-light"><%= link_to "Edit this task", edit_task_path%></button>
    </div>

  </div>

  <div class="row m-4">
    <div class="col p-3 card-details rounded">
      <%=@task.details%>
    </div>
  </div>

  <div class="row m-4">
    <div class="col p-3">
        <input type="checkbox" name="task_completed_details" <%=@task.completed ? 'checked' : '' %>>
        <label for="task_completed_details"><%= @task.completed ? "You have completed this task" : "You have not yet completed this task" %></label><br>
    </div>
  </div>

  <div class="row m-4">
    <div class="col p-3">
      <%= link_to "Back to list", tasks_path%>
    </div>
  </div>


</div>
